{
  "compilerOptions": {
    "target": "es5",
    "lib":["dom", "es6", "dom.iterable", "scripthost", "es2016.array.include", "es2017"],
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "keyofStringsOnly": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "./src/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
